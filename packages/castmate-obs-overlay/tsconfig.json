{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",

		/* Linting */
		"strict": true,
		/* "noUnusedLocals": true,*/
		/* "noUnusedParameters": true, */
		/* "noFallthroughCasesInSwitch": true */
		"paths": {
			"castmate-overlay-widget-loader": [
				"../../libs/castmate-overlay-widget-loader/src/overlay-widget-loader.ts"
			],
			"castmate-satellite-ui-core": ["../../libs/castmate-satellite-ui-core/src/satellite-ui-core-main.ts"],
			"castmate-overlay-core": ["../../libs/castmate-overlay-core/src/overlay-core-main.ts"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
